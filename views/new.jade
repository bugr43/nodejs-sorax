extends loyaut
block content
    form(method='post' action='/new')
        fieldset
            .input-field
                label(for='pageurl') Page Url
                input#pageurl(name='pageurl' type='text')
            .input-field
                label(for='pagename') Page Name
                input#pagename(name='pagename' type='text')
            .input-field
                label(for='pagecontent') Page Content
                input#pagecontent(name='pagecontent' type='text')
            .input-field
                button.btn(type='submit') Add
